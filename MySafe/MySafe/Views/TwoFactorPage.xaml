<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MySafe.Views.TwoFactorPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BindingContext="{Binding Source={StaticResource VmLocator}, Path=TwoFactorViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0">
            <Label
                    Margin="0,25,0,0"
                    FontFamily="Montserrat"
                    FontSize="36"
                    HorizontalOptions="Center"
                    Text="MySafe"
                    TextColor="Black" />
        <Label
                    Margin="0,-15,0,0"
                    FontFamily="Montserrat"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="online"
                    TextColor="Black" />
    </StackLayout>
        <StackLayout Grid.Row="1" VerticalOptions="Center">
        <Label Margin="120,-20,120,0" HorizontalOptions="Center" HorizontalTextAlignment="Center">Введите код из SMS, отправленный на ваш номер телефона</Label>
            
        </StackLayout>
        <StackLayout Grid.Row="1" VerticalOptions="Center">
            <Entry Margin="80,60,80,0" Text="{Binding Code}" />
        </StackLayout>
        <StackLayout Grid.Row="2" VerticalOptions="Center">
            <Button CornerRadius="25" Margin="100,0,100,0" FontSize="18" TextColor="White" BackgroundColor="#3D6CC7" Command="{Binding SignInCommand}" Text="Отправить" />
        </StackLayout>
    </Grid>
</ContentPage>