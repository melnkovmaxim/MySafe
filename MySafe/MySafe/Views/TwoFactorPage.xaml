<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MySafe.Views.TwoFactorPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BindingContext="{Binding Source={StaticResource VmLocator}, Path=TwoFactorViewModel}">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Label HorizontalOptions="CenterAndExpand">Код из SMS</Label>
            <Entry Text="{Binding Code}" />
            <Button Command="{Binding SignInCommand}" Text="Отправить" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>