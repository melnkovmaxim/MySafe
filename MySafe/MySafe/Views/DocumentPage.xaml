<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MySafe.Views.DocumentPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Document"
    BindingContext="{Binding Source={StaticResource VmLocator}, Path=DocumentViewModel}"
    >
    <ContentPage.Content>
        <StackLayout>
            <Button
                BackgroundColor="#F1BE74"
                Command="{Binding UploadFileCommand}"
                HeightRequest="50"
                HorizontalOptions="FillAndExpand"
                Text="Добавить файл" />
            <CarouselView CurrentItem="{Binding CurrentAttachment}" ItemsSource="{Binding Attachments}">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding ImageSource}">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BindingContext.DownloadFileCommand, Source={x:Reference Document}}" CommandParameter="{Binding .}" />
                            </Image.GestureRecognizers>
                        </Image>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <StackLayout
                BackgroundColor="#F1BE74"
                HeightRequest="60"
                HorizontalOptions="FillAndExpand"
                
                Orientation="Horizontal">
                <Button
                    Margin="50,0,0,0"
                    Command="{Binding OpenFileCommand}"
                    CommandParameter="{Binding CurrentAttachment}"
                    BackgroundColor="Transparent"
                    ImageSource="clockwise.png"
                    Text="Открыть оригинал" />
                <Button
                    
                    Command="{Binding DownloadFileCommand}"
                    CommandParameter="{Binding CurrentAttachment}"
                    BackgroundColor="Transparent"
                    ImageSource="download.png"
                    Text="" />
                <Button
                    Margin="0,0,50,0"
                    Command="{Binding MoveToTrashCommand}"
                    CommandParameter="{Binding CurrentAttachment}"
                    BackgroundColor="Transparent"
                    ImageSource="delete.png"
                    Text="" />
            </StackLayout>
        </StackLayout>
        <!--<CollectionView ItemsSource="{Binding Attachments}" VerticalOptions="FillAndExpand">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding ImageSource}">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding BindingContext.DownloadFileCommand, Source={x:Reference Document}}" CommandParameter="{Binding .}" />
                        </Image.GestureRecognizers>
                    </Image>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>-->
    </ContentPage.Content>
</ContentPage>