<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MySafe.Views.DocumentPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="http://prismlibrary.com"
    BindingContext="{Binding Source={StaticResource VmLocator}, Path=DocumentViewModel}">
    <ContentPage.Resources>
        <Style TargetType="Button">
            <!-- <Setter Property="HeightRequest" Value="70" /> -->
            <Setter Property="CornerRadius" Value="25" />
            <!-- <Setter Property="Backgroundcolor" Value="#E4E8FB" /> -->
        </Style>
    </ContentPage.Resources>
    <ContentPage.Behaviors>
        <behaviors:EventToCommandBehavior Command="{Binding LoadedCommand}" EventName="Appearing" />
    </ContentPage.Behaviors>
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="120" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="75" />
                </Grid.RowDefinitions>
                <StackLayout
                Grid.Row="0"
                HorizontalOptions="CenterAndExpand"
                Orientation="Horizontal">
                    <Grid ColumnSpacing="10" RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="160" />
                        </Grid.ColumnDefinitions>
                        <Button
                        Grid.Row="0"
                        Grid.Column="0"
                        CornerRadius="50"
                        BackgroundColor="#E4E8FB"
                        Text="+" />

                        <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="Edit"
                        CornerRadius="50"
                        BackgroundColor="#E4E8FB"
                         />
                    </Grid>
                </StackLayout>

                <StackLayout
                Grid.Row="1"
                HeightRequest="300"
                    Margin="0,-50,0,0"
                HorizontalOptions="CenterAndExpand"
                Orientation="Horizontal"
                >
                    <Grid ColumnSpacing="35" RowSpacing="25">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <RowDefinition Height="100" />
                            <RowDefinition Height="100" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130" />
                            <ColumnDefinition Width="130" />
                        </Grid.ColumnDefinitions>

                        <Button
                        Grid.Row="0"
                        Grid.Column="0"
                        
                        BackgroundColor="#E4E8FB"
                        Text="ИНН" />
                        <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        BackgroundColor="#E4E8FB"
                        Text="Прописка" 
                        
                        />
                        <Button
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="Прописка"
                        BackgroundColor="#E4E8FB"
                         />
                        <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="Прописка"
                        BackgroundColor="#E4E8FB"
                        />
                        <Button
                        Grid.Row="2"
                        Grid.Column="0"
                        Text="Прописка"
                        BackgroundColor="#E4E8FB"
                        />
                        <Button
                        Grid.Row="2"
                        Grid.Column="1"
                        Text="Прописка"
                        BackgroundColor="#E4E8FB"
                        />
                    </Grid>
                </StackLayout>

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>