<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MySafe.Views.DocumentPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="http://prismlibrary.com"
    BindingContext="{Binding Source={StaticResource VmLocator}, Path=DocumentViewModel}">
    <ContentPage.Resources>
        <Style TargetType="Button">
            <!-- <Setter Property="HeightRequest" Value="70" /> -->
            <Setter Property="CornerRadius" Value="25" />
            <Setter Property="Padding" Value="0,-60,0,0" />
            <Setter Property="FontSize" Value="18" />
            <!-- <Setter Property="Backgroundcolor" Value="#E4E8FB" /> -->
        </Style>
    </ContentPage.Resources>
    <ContentPage.Behaviors>
        <behaviors:EventToCommandBehavior Command="{Binding LoadedCommand}" EventName="Appearing" />
    </ContentPage.Behaviors>
    <ContentPage.Content>
        <StackLayout>
            <Button HeightRequest="50" HorizontalOptions="Fill" CornerRadius="24" FontSize="24" Margin="20,20,20,10" Padding="-80,0,0,0" ImageSource="docs.png"  BackgroundColor="#E4E8FB">
            </Button>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="120" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="75" />
                </Grid.RowDefinitions>
                <StackLayout
                Grid.Row="0"
                HorizontalOptions="CenterAndExpand"
                Orientation="Horizontal">
                    <Grid ColumnSpacing="10" RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="180" />
                        </Grid.ColumnDefinitions>
                        <Button
                        Grid.Row="0"
                        Grid.Column="0"
                            Padding="0,0,0,0"
                        CornerRadius="15"
                        BackgroundColor="#E4E8FB"
                        Text="+" />

                        <Button
                        Grid.Row="0"
                        Grid.Column="1"
                            Padding="0,0,0,0"
                        
                            ImageSource="pen.png"
                        CornerRadius="15"
                        BackgroundColor="#E4E8FB"
                         />
                    </Grid>
                </StackLayout>

                <StackLayout
                Grid.Row="1"
                HeightRequest="300"
                HorizontalOptions="CenterAndExpand"
                Orientation="Horizontal"
                    Margin="0,-50,0,0"
                >
                    <Grid ColumnSpacing="10" RowSpacing="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="120" />
                            <RowDefinition Height="120" />
                            <RowDefinition Height="120" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="180" />
                        </Grid.ColumnDefinitions>

                        <Button
                        Grid.Row="0"
                        Grid.Column="0"
                        
                        BackgroundColor="#E4E8FB"
                        Text="Паспорт:" />
                        <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        BackgroundColor="#E4E8FB"
                        Text="ИНН:" 
                        
                        />
                        <Button
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="СНИЛС:"
                        BackgroundColor="#E4E8FB"
                         />
                        <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="Страхование:"
                        BackgroundColor="#E4E8FB"
                        />
                        <Button
                        Grid.Row="2"
                        Grid.Column="0"
                        Text="Прописка:"
                        BackgroundColor="#E4E8FB"
                        />
                        <Button
                        Grid.Row="2"
                        Grid.Column="1"
                        Text="Другое:"
                        BackgroundColor="#E4E8FB"
                        />
                    </Grid>
                </StackLayout>

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>