<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MySafe.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="http://prismlibrary.com"
    x:Name="Main"
    BindingContext="{Binding Source={StaticResource VmLocator}, Path=MainViewModel}">

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="CornerRadius" Value="25" />
            <Setter Property="Padding" Value="0,-60,0,0" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Opacity" Value="0.8" />
        </Style>
        <Style TargetType="Frame">
            <Setter Property="CornerRadius" Value="25" />
            <Setter Property="HasShadow" Value="True" />
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="120" />
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="75" />
            </Grid.RowDefinitions>

            <Frame
                Margin="20,20,20,-20"
                BackgroundColor="#E4E8FB"
                CornerRadius="24"
                HasShadow="True"
                WidthRequest="380">

                <StackLayout
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalOptions="FillAndExpand"
                    Orientation="Horizontal"
                    VerticalOptions="FillAndExpand">
                    <Switch IsToggled="{Binding ToggleTemp}" IsVisible="False" >
                        <Switch.Behaviors>
                            <behaviors:EventToCommandBehavior Command="{Binding LoadedCommand}" EventName="Toggled" />
                        </Switch.Behaviors>
                    </Switch>
                    <Label
                        Margin="20,0,0,0"
                        FontFamily="Montserrat"
                        FontSize="24"
                        HorizontalOptions="StartAndExpand"
                        Text="MySafe"
                        TextColor="Black"
                        WidthRequest="150" />
                    <Label
                        Margin="-120,24,0,0"
                        FontFamily="Montserrat"
                        FontSize="18"
                        HorizontalOptions="Start"
                        Text="online"
                        TextColor="Black"
                        WidthRequest="150" />
                    <Button
                        Margin="120,0,20,30"
                        Padding="0,0,0,0"
                        BackgroundColor="#F2F4FF"
                        Command="{Binding SignOutCommand}"
                        CornerRadius="50"
                        HeightRequest="10"
                        HorizontalOptions="End"
                        ImageSource="jam_menu.png"
                        WidthRequest="50" />
                    
                </StackLayout>
            </Frame>
            <StackLayout>
                <BoxView
                    Margin="56,97,56,0"
                    CornerRadius="24"
                    HeightRequest="9"
                    HorizontalOptions="Fill"
                    Opacity="0.20"
                    Color="Black" />
                <BoxView
                    Margin="58,-13,58,0"
                    CornerRadius="24"
                    HeightRequest="5"
                    HorizontalOptions="Fill"
                    Opacity="0.75"
                    Color="White" />
                <ProgressBar
                    Margin="60,-95,60,0"
                    HorizontalOptions="Fill"
                    Progress="{Binding Progress}"
                    ProgressColor="#FFC772"
                    VerticalOptions="EndAndExpand" />
                <Grid Margin="60,-10,-85,0">
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        FontSize="10"
                        Text="Память хранилища"
                        TextColor="#7e7e7e" />
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        FontSize="10"
                        Text="{Binding SafeSizeInfo}"
                        TextColor="#7e7e7e" />
                </Grid>
                
            </StackLayout>
            <StackLayout Grid.Row="1" Grid.Column="0">
                <!-- <Image
                    Margin="-335,40,0,0"
                    Source="loopa.png"
                    WidthRequest="20" /> -->
                <SearchBar Margin="10,10,10,20"
                    HorizontalOptions="Fill"
                    IsEnabled="True"
                    Opacity="0.8"
                    Placeholder=" Название документа"
                    PlaceholderColor="#7e7e7e" ></SearchBar>
                <!--<Entry
                    Margin="50,-37,20,20"
                    HorizontalOptions="Fill"
                    IsEnabled="True"
                    Opacity="0.8"
                    Placeholder=" Название документа"
                    PlaceholderColor="#7e7e7e" /> -->
                <!-- 20,-35,20,0 -->
                <BoxView
                    Margin="20,-28,20,0" 
                    HeightRequest="2"
                    HorizontalOptions="Fill"
                    Opacity="0.87"
                    Color="#3465C4" />
                <!--<RefreshView BackgroundColor="Aqua" HorizontalOptions="Fill" HeightRequest="50"></RefreshView>-->
            </StackLayout>
            <StackLayout
                Grid.Row="2"
                Margin="0,50,0,0"
                HeightRequest="220"
                HorizontalOptions="CenterAndExpand"
                Orientation="Horizontal">
                <Grid ColumnSpacing="25" RowSpacing="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                    </Grid.ColumnDefinitions>
                    <Frame Grid.Row="0"
                        Grid.Column="0">
                        <Button
                        Margin="-20,-20,-20,-20"
                        BackgroundColor="#E4E8FB"
                        Command="{behaviors:NavigateTo 'NavigationPage/DocumentPage',
                                                       SourcePage={x:Reference Main}}"
                        Text="Документы:" />
                    </Frame>
                    <Frame Grid.Row="0"
                        Grid.Column="1">
                        <Button
                        Margin="-20,-20,-20,-20"
                        BackgroundColor="#E4E8FB"
                        Command="{behaviors:NavigateTo 'NavigationPage/TaxPage',
                        SourcePage={x:Reference Main}}"
                        Text="Налоги:" />
                    </Frame>
                    <Frame Grid.Row="1"
                        Grid.Column="0">
                        <Button
                        Margin="-20,-20,-20,-20"
                        BackgroundColor="#E4E8FB"
                        Command="{behaviors:NavigateTo 'NavigationPage/EstatePage',
                        SourcePage={x:Reference Main}}"
                        Text="Имущество:">
                        </Button>
                    </Frame>
                    <Frame  Grid.Row="1"
                        Grid.Column="1">
                    <Button
                        Margin="-20,-20,-20,-20"
                        BackgroundColor="#E4E8FB"
                        Command="{behaviors:NavigateTo 'NavigationPage/UtilPage',
                                                       SourcePage={x:Reference Main}}"
                        Text="ЖКХ:" />
                    </Frame>
                    <Frame Grid.Row="2"
                        Grid.Column="0">
                    <Button
                        Margin="-20,-20,-20,-20"
                        BackgroundColor="#E4E8FB"
                        Command="{behaviors:NavigateTo 'NavigationPage/HealthPage',
                                                       SourcePage={x:Reference Main}}"
                        Text="Здоровье:" />
                    </Frame>
                    <Frame Grid.Row="2"
                        Grid.Column="1">
                    <Button
                        Margin="-20,-20,-20,-20"
                        BackgroundColor="#E4E8FB"
                        Command="{behaviors:NavigateTo 'NavigationPage/OtherPage',
                        SourcePage={x:Reference Main}}"
                        Text="Другое:" />
                    </Frame>
                </Grid>
                <Frame Margin="20,0,0,0"
                     >
                    <Button
                    Margin="-20,-20,-20,-20" Padding="0,0,0,0"
                    BackgroundColor="#FFC46B"
                    Command="{behaviors:NavigateTo 'NavigationPage/NotePage',
                        SourcePage={x:Reference Main}}"
                    ImageSource="note1.png" />
                    <!-- Command="{Binding SignOutCommand}" -->
                </Frame>

            </StackLayout>
            <StackLayout
                Grid.Row="3"
                HeightRequest="30"
                HorizontalOptions="CenterAndExpand"
                Orientation="Horizontal">
                <Frame Grid.Row="2" Margin="0,15,0,10"
                     >
                    <Button
                    
                    Margin="-20,-20,-20,-20"
                    Padding="0,0,0,0"
                    BackgroundColor="#E4E8FB"
                    Command="{behaviors:NavigateTo 'NavigationPage/BinPage',
                                                   SourcePage={x:Reference Main}}"
                    HorizontalOptions="Center"
                    ImageSource="info.png"
                    WidthRequest="380" />
                </Frame>
            </StackLayout>
            
        </Grid>
        
    </ContentPage.Content>
</ContentPage>