<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
            x:Name="Main"
             x:Class="MySafe.Views.MainPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="http://prismlibrary.com"
             BindingContext="{Binding Source={StaticResource VmLocator}, Path=MainViewModel}">
    <ContentPage.Resources>
        <Style TargetType="Button">
            <!-- <Setter Property="HeightRequest" Value="70" /> -->
            <Setter Property="CornerRadius" Value="25" />
            <Setter Property="Padding" Value="0,-75,0,0" />
            <!-- <Setter Property="Backgroundcolor" Value="#E4E8FB" /> -->
        </Style>
        <Style TargetType="StackLayout">
            <!--<Setter Property="CornerRadius" Value="25" /> -->
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="90" />
                <RowDefinition Height="*" />
                <RowDefinition Height="75" />
            </Grid.RowDefinitions>
            <Frame CornerRadius="24" Margin="20,20,20,-20" WidthRequest="380" BackgroundColor="#E4E8FB">
            <StackLayout
                Grid.Row="0"
                Grid.Column="0"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                Orientation="Horizontal">
                
                <Label
                    Margin="20,0,0,0"
                    FontFamily="Montserrat"
                    FontSize="24"
                    HorizontalOptions="StartAndExpand"
                    WidthRequest="150"
                    Text="MySafe"
                    TextColor="Black" 
                    />
                <Label
                    Margin="-120,24,0,0"
                    FontFamily="Montserrat"
                    FontSize="18"
                    WidthRequest="150"
                    HorizontalOptions="Start"
                    Text="online"
                    TextColor="Black" />
                <Button HorizontalOptions="End" Margin="120,0,20,0" WidthRequest="50" HeightRequest="10" BackgroundColor="#F2F4FF" CornerRadius="50" ImageSource="Resources/jam_menu1.png" />
                    
                </StackLayout>
                
            </Frame>
            <StackLayout>
                <ProgressBar HorizontalOptions="Fill" Margin="60,90,60,0"  VerticalOptions="EndAndExpand"/>
            </StackLayout>
            <!--<Button Text="Search" HorizontalOptions="Fill" HeightRequest="50" CornerRadius="24"/> -->
            <StackLayout
                Grid.Row="1"
                HeightRequest="300"
                Margin="0,30,0,0"
                HorizontalOptions="CenterAndExpand"
                Orientation="Horizontal"
                >
                <Grid ColumnSpacing="25" RowSpacing="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Row="0"
                        Grid.Column="0"
                        Command="{behaviors:NavigateTo 'NavigationPage/DocumentPage',
                                                       SourcePage={x:Reference Main}}"
                        BackgroundColor="#E4E8FB"
                        Text="Документы" />
                    <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        BackgroundColor="#E4E8FB"
                        Text="Налоги" 
                        Command="{behaviors:NavigateTo 'NavigationPage/TaxPage',
                                                       SourcePage={x:Reference Main}}"
                        />
                    <Button
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="ЖКХ"
                        BackgroundColor="#E4E8FB"
                        Command="{behaviors:NavigateTo 'NavigationPage/UtilPage',
                                                       SourcePage={x:Reference Main}}" />
                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="Имущество"
                        BackgroundColor="#E4E8FB"
                        Command="{behaviors:NavigateTo 'NavigationPage/EstatePage',
                                                       SourcePage={x:Reference Main}}"/>
                    <Button
                        Grid.Row="2"
                        Grid.Column="0"
                        Text="Здоровье"
                        BackgroundColor="#E4E8FB"
                        Command="{behaviors:NavigateTo 'NavigationPage/HealthPage',
                                                       SourcePage={x:Reference Main}}"/>
                    <Button
                        Grid.Row="2"
                        Grid.Column="1"
                        Text="Другое"
                        BackgroundColor="#E4E8FB"
                        Command="{behaviors:NavigateTo 'NavigationPage/OtherPage',
                                                       SourcePage={x:Reference Main}}"/>
                </Grid>
                <Button Text="БЛТ" Margin="20,0,0,0" BackgroundColor="#FFC46B" Padding="0,0,0,0"
                        Command="{behaviors:NavigateTo 'NavigationPage/NotePage',
                                                       SourcePage={x:Reference Main}}"/>
            </StackLayout>
            <StackLayout
                Grid.Row="2"
                HeightRequest="25"
                HorizontalOptions="CenterAndExpand"
                Orientation="Horizontal"
                >

                <Button Margin="0,15,0,15" WidthRequest="380" Padding="0,0,0,0" HorizontalOptions="Center"
                Grid.Row="2" BackgroundColor="#E4E8FB" Text="КРЗ" Command="{behaviors:NavigateTo 'NavigationPage/BinPage',
                                                       SourcePage={x:Reference Main}}" />
            </StackLayout>
        </Grid>

    </ContentPage.Content>
</ContentPage>