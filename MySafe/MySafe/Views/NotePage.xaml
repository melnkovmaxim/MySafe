                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Frame Grid.Row="0"
                    Margin="20,10,20,15"
                    BackgroundColor="#F3F5FF"
                    BorderColor="#3465C4"
                    CornerRadius="10"
                    HasShadow="True"
                    HeightRequest="460"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill">
                    <Editor
                        BackgroundColor="#F3F5FF"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Fill"/>
                </Frame>
            </Grid>-->


            <CollectionView
                Margin="20,0,20,0"
                ItemsSource="{Binding TrashItems}"
                VerticalOptions="FillAndExpand">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout
                        HorizontalItemSpacing="5"
                        Orientation="Vertical"
                        Span="1"
                        VerticalItemSpacing="15" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#FBFFE9">
                            <Button
                                Margin="-22,-20,-22,-20"
                                BackgroundColor="#FBFFE9"
                                BorderColor="Gray"
                                BorderWidth="1"
                                Text="Название файла" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>